export GTK_IM_MODULE=fcitx
export QT_IM_MODULE=fcitx
export XMODIFIERS=@im=fcitx

if xrandr | grep 'connected primary'; then
    xrandr --output `xrandr | grep 'connected primary' | cut -d ' ' -f1` --mode 2560x1440 --rate 144
fi
# xset s off -dpms # Disable DPMS and prevent screen from blanking

pgrep -x fcitx > /dev/null || fcitx -d
pgrep -x -f /usr/lib/notification-daemon-1.0/notification-daemon || /usr/lib/notification-daemon-1.0/notification-daemon &

pgrep -x xss-lock > /dev/null || xss-lock -- i3lock -n &

