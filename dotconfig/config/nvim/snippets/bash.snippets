snippet main
    #!/usr/bin/env bash

    info() {
        echo "[info]" "\$@"
    }

    err() {
        echo "[error]" "\$@" 2>&1
    }

    die() {
        local code="\$1"
        shift

        err "\$@"
        exit "\${code}"
    }

    __func_defered=()
    do_defer() {
        for ((i=\${#__func_defered[@]}-1;i>=0;i--)); do
            if ! eval "\${__func_defered[i]}"; then
                die 1 "eval cmd failed, cmd: \"\${__func_defered[i]}\""
            fi
        done
    }
    trap do_defer EXIT
    defer() {
        __func_defered+=("\$*")
    }

    main() {

    }

    main "\$@"

